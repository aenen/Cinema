<div class="movie-list-container row">
    @foreach (var item in Model)
    {
        //linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0) 54%,rgba(0,0,0,1) 100%),
        <div class="movie-list-item text-center col-md-6 col-lg-4" style="background:url(@item.BackgroundPath) no-repeat center">
            @Html.ActionLink(item.Name, "Details", "Movie", new { id = item.Id }, null)
        </div>
    }
</div>


