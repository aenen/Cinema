@using Cinema.Data.Identity

@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TRAEKTORIA - Мережа кінотеатрів України</title>
    <link href="~/Content/WebsiteImage/Logo/logo-fat.png" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/Content/Icon/icomoon/style.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="home-body h-100">
    <div id="mySidenav" class="sidenav">
        <a href="@Url.Action("Index","Cinema")">Кінотеатри</a>
        <a href="@Url.Action("Index","Movie")">Зараз у кіно</a>
        <a href="@Url.Action("Index","Profile")">Особистий кабінет</a>
    </div>
    <nav class="home-navbar position-relative d-flex flex-row justify-content-between align-items-center text-center ">
        <a href="#"  id="menu-btn" class="home-nav-item icon-main-menu">
        </a>
        <a href="/" class="">
            <img class="img-logo-full" src="~/Content/WebsiteImage/Logo/full_logo.svg" height="50" />
        </a>

        @{
            var currentUser = User.Identity.GetApplicationUser();
            if (currentUser != null && !currentUser.PicturePath.IsEmpty())
            {
                <a href="@Url.Action("Index", "Profile")" class="home-nav-item profile-nav-img" style="background: url(/@currentUser.PicturePath.Replace('\\','/')) no-repeat center"></a>
            }
            else
            {
                <a href="@Url.Action("Index", "Profile")" class="home-nav-item profile-nav-img icon-profile"></a>
            }
        }
        @*<a href="@Url.Action("Index", "Profile")" class="home-nav-item profile-nav-img icon-profile"></a>*@
    </nav>
    <div class="home-container d-flex flex-column justify-content-between text-center mx-auto">
        <img class="img-logo-small mx-auto" src="~/Content/WebsiteImage/Logo/logo.svg" width="150"/>
        <div class="home-main-menu">
            <a href="@Url.Action("Index", "Cinema")" class="home-btn d-block p-2">Обрати кінотеатр</a>
            <a href="@Url.Action("Index", "Movie")" class="home-btn d-block p-2">Обрати фільм</a>
        </div>
        <div class="home-additional-menu d-flex justify-content-center m-3">
            <a href="#" class="home-nav-item d-inline-block icon-facebook"></a>
            <a href="#" class="home-nav-item d-inline-block icon-instagram"></a>
            <a href="https://github.com/aenen/Cinema" target="_blank" class="home-nav-item d-inline-block icon-github"></a>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        $(function () {
            $("#menu-btn").click(function () {
                if ($("#mySidenav").width() > 0)
                    $("#mySidenav").width(0);
                else
                    $("#mySidenav").width(315);
            });
        });
    </script>
</body>
</html>
