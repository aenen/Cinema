@{
    ViewBag.Title = "Email не підтверджено";
}

<div class="bg-100-color"></div>
<div class="container text-center position-relative text-white">
    <i class="icon-mood-waiting display-3 text-info"></i>

    @{
        if (String.IsNullOrEmpty(ViewBag.Message))
        {
            <h2>Сталась помилка під час оправцювання запиту</h2>
        }
        else
        {
            <h2>@ViewBag.Message</h2>
        }
    }
</div>